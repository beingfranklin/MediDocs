<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">
    <TableRow>
        <TextView
            android:id="@+id/classs1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$CLASS"
            android:textColor="#000"/>

        <TextView
        android:id="@+id/classs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/recordId1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECORD ID"
            android:textColor="#000"/>

        <TextView
        android:id="@+id/recordId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/owner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OWNER"
            android:textColor="#000"/>

        <TextView
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/valuev1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VALUE"
            android:textColor="#000"/>

        <TextView
        android:id="@+id/valuev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/doctorId1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCTOR ID"
            android:textColor="#000"/>

        <TextView
        android:id="@+id/doctorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt1"
            android:text="bt" />

        <ProgressBar
            android:id="@+id/pd"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


    </TableRow>

    <TableRow>

    <Button
        android:id="@+id/bt2"
        android:text="VIEW" />


    </TableRow>


    <!--<TableRow>-->

